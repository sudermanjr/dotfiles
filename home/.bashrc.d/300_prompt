export GBT_CAR_GIT_AHEAD_FG='yellow'
export GBT_CAR_GIT_BG='250'

# Kubectl
export GBT_CAR_KUBECTL_FORMAT=' {{ Icon }} {{ Context }} {{ Namespace }} '
