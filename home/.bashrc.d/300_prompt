export GBT_CAR_CUSTOMRO_BG='red'
export GBT_CAR_CUSTOMRO_DISPLAY_CMD="[[ ! -z ${PROJECT} ]] && echo YES"

# ExecTime
source /Users/asuderma/go/src/github.com/jtyr/gbt/sources/exectime/bash.sh
export GBT__SOURCE_DATE_ARG='+%s'

# Custom Kube
KUBECONFIG_DEFAULT=~/.kube/config
export GBT_CAR_CUSTOMKUBE_FORMAT=' âŽˆ  {{ Text }} '
export GBT_CAR_CUSTOMKUBE_TEXT_CMD="kcx=\$(yq r \${KUBECONFIG:-$KUBECONFIG_DEFAULT} -j | jq -jr '.[\"current-context\"]'); kns=\$(yq r \${KUBECONFIG:-$KUBECONFIG_DEFAULT} -j | jq -jr --arg cx \"\$kcx\" '.contexts[] | select(.name == \$cx) | .context.namespace'); printf '%s %s' \"\$kcx\" \"\$kns\""
export GBT_CAR_CUSTOMKUBE_BG='21'
export GBT_CAR_CUSTOMKUBE_DISPLAY_CMD="[[ -f ${KUBECONFIG} ]] && echo YES"
