# List of cars
export GBT_CARS='Dir, Git, CustomRO, CustomKUBE, PyVirtEnv, Status, Sign'

# Prompt sign
export GBT_CAR_SIGN_WRAP='1'
export GBT_CAR_SIGN_FORMAT="â””â”€î‚° "

# Dir
